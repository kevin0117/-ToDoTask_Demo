<h1><%= t('users.index_user') %></h1>

<table class="table table-hover">
  <thead>
    <tr>
      <td>使用者帳號</td>
      <td>Ｅ-Mail信箱</td>
    </tr>
  </thead>
  
  <tbody>
    <% @users.each do |user| %>
      <tr>
      <td><%= user.username %></td>
      <td><%= user.email %></td>
      <td><%= button_to t("users.edit"), edit_user_path(user),class:"btn btn-outline-secondary", method: 'get' %></td>
      <td><%= button_to t("users.delete"), user_path(user), class:"btn btn-outline-danger", method: 'delete', data: { confirm: "確認刪除嗎？"} %></td>
    </tr>
    <% end %>
  </tbody>
</table>