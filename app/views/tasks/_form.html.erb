
<%= form_for(task) do |form| %>
  <div class="wrap">
    <div>
      <%= label :title, "任務名稱"  %>
      <%= form.text_field :title  %> 
    </div>
    <div>
      <%= label :content, "任務內容"  %>
      <%= form.text_area :content %>
    </div>
    <div>
      <%= label :task_begin, "任務開始"  %>
      <%= form.datetime_field :task_begin %>
      <%= label :task_end, "任務結束"  %>
      <%= form.datetime_field :task_end  %>
    </div>
    <div>
      <%= label :priority, "任務優先順序"  %>
      <%= form.radio_button :priority, '1' %>
      <%= label :priority, '1' %>
      <%= form.radio_button :priority, '2' %>
      <%= label :priority, '2' %>
      <%= form.radio_button :priority, '3' %>
      <%= label :priority, '3' %>
    </div>
    <div>
      <%= label :status, "任務狀態" %>
      <%= form.radio_button :status, 'pending' %>
      <%= label :status, 'pending' %>
      <%= form.radio_button :status, 'proceeding' %>
      <%= label :status, 'proceeding' %>
      <%= form.radio_button :status, 'done' %>
      <%= label :status, 'done' %>
    </div>
    <div>
      <%= form.submit %>
    </div>
  </div>

<% end %>